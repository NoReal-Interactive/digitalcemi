{
  "name": "digitalcemi",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . cemi-electron-app --overwrite --platform=win32 --arch=x64 --out=dist",
    "dist": "electron-builder",
    "build-services": "webpack --config cemi-app/src/webpack.cemi-app.js",
    "build-js": "terser cemi-app/js/*.js -o cemi-app/js/dist/main.min.js -c -m --comments"
  },
  "build": {
    "appId": "com.noreal.digitalcemi",
    "productName": "Digital Cem√≠",
    "files": [
      "**/*"
    ],
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true
    }
  },
  "author": "No Real Interactive",
  "dependencies": {
    "express": "^5.1.0",
    "express-basic-auth": "^1.2.1",
    "express-session": "^1.18.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "terser": "^5.44.0",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  }
}
